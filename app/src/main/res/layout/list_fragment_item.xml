<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item">

    <ImageView
        app:srcCompat="@mipmap/ic_play"
        android:id="@+id/imgAlbum_list"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:text="TextView"
        android:layout_width="140dp"
        android:id="@+id/tvThick_list"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum_list"
        app:layout_constraintTop_toTopOf="@+id/imgAlbum_list"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_height="30dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvThin_list"
        app:layout_constraintBottom_toBottomOf="@+id/imgAlbum_list"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum_list"
        android:layout_marginLeft="8dp"
        android:singleLine="true" />

    <ImageView
        app:srcCompat="@mipmap/right_end"
        android:id="@+id/imgAdd_list"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>

