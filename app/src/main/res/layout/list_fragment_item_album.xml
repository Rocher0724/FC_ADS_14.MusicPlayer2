<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/list_item">

    <TextView
        android:text="TextView"
        android:layout_height="31dp"
        android:id="@+id/tvAlbumId_album"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintRight_toRightOf="@+id/imgAlbum_album"
        app:layout_constraintTop_toBottomOf="@+id/imgAlbum_album"
        android:layout_width="150dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgAlbum_album"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumOfTracks_album"
        app:layout_constraintTop_toBottomOf="@+id/tvAlbumId_album"
        app:layout_constraintRight_toRightOf="@+id/tvAlbumId_album"
        android:layout_width="150dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAlbumId_album"
        android:maxLines="1"
        android:singleLine="true" />


    <ImageView
        app:srcCompat="@mipmap/ic_play"
        android:id="@+id/imgAlbum_album"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>

